<Window x:Class="WpfApplicationEntity.Forms.Main.DeleteGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationEntity.Forms.Main"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Выбор группы" Height="200" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
        <TextBlock Margin="0,10,0,0" FontSize="16" FontFamily="{StaticResource IBMPlexSansMedium}" VerticalAlignment="Top" HorizontalAlignment="Center" Text="Выберите группу!" Foreground="#329A93" />
            <ComboBox x:Name="GroupCombo"  FontSize="16" Foreground="#329A93" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="182" Height="33"/>
            <Button Margin="0,20,0,0" Height="35" Width="150" x:Name="bGruppa" Content="Выселить"  FontSize="16" FontFamily="{StaticResource IBMPlexSansBold}" Background="#FF329A93" Foreground="White" Click="bGruppa_Click"/>
        </StackPanel>

    </Grid>

</Window>
